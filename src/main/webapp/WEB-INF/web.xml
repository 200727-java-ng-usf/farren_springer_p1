<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Hello</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SessionServletObj</servlet-name>
        <servlet-class>com.revature.ers.sessionservlet.SessionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SessionServletObj</servlet-name>
        <url-pattern>/sesserv</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelperSessionServletObj</servlet-name>
        <servlet-class>com.revature.ers.sessionservlet.HelperSessionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelperSessionServletObj</servlet-name>
        <url-pattern>/helpsesserv</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeServletObj</servlet-name>
        <servlet-class>com.revature.ers.servlets.employee.EmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EmployeeServletObj</servlet-name>
        <url-pattern>/employeeWelcome</url-pattern>
    </servlet-mapping>

    <!-- FORWARDING MASTER SERVLET -->
    <servlet>
        <servlet-name>ForwardingMasterServlet</servlet-name>
        <servlet-class>com.revature.ers.servlets.ForwardingMasterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ForwardingMasterServlet</servlet-name>
        <url-pattern>/MasterServlet</url-pattern>
        <!-- "*" is a wildcard. Can take an infinite amount of values as valid -->
        <url-pattern>*.anything</url-pattern>
        <url-pattern>/api/*</url-pattern>
        <!-- YES...you can have multiple url-pattern tags -->
        <url-pattern>/farren</url-pattern>
    </servlet-mapping>


    <!-- DIRECT RESPONSE SERVLET -->
    <servlet>
        <servlet-name>JsonMasterServlet</servlet-name>
        <servlet-class>com.revature.ers.jsonservlet.JsonMasterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JsonMasterServlet</servlet-name>
        <url-pattern>/json/*</url-pattern>
    </servlet-mapping>

</web-app>